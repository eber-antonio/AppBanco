<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:src="@mipmap/c" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="MONTO A RECARGAR" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor">

        <RadioButton
            android:id="@+id/telcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telcel" />

        <RadioButton
            android:id="@+id/movistar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movistar" />

        <RadioButton
            android:id="@+id/atandt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atandt"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/unefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unefon" />

    </RadioGroup>

    <EditText
        android:id="@+id/numeroCelular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Numero de celular (10 digitos)" />

    <Button
        android:id="@+id/btnRecargar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="#696969"
        android:text="Recargar"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>