<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainRecargas">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:src="@mipmap/c" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SELECIONA MONTO Y COMPAÃ‘IA" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor">

        <RadioButton
            android:id="@+id/veinte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20" />

        <RadioButton
            android:id="@+id/cincuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50" />

        <RadioButton
            android:id="@+id/cien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100" />

        <RadioButton
            android:id="@+id/doscientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200" />
    </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_valor1">

        <RadioButton
            android:id="@+id/telcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telcel" />

        <RadioButton
            android:id="@+id/movistar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movistar" />

        <RadioButton
            android:id="@+id/atandt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At and t"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/unefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unefon" />

    </RadioGroup>

    <EditText
        android:id="@+id/numeroCelular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Numero de celular (10 digitos)" />

    <Button
        android:id="@+id/btnRecargar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="#696969"
        android:onClick=" "
        android:text="@string/btnRecargar"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:text="@string/btnRecargar" />


  </LinearLayout>